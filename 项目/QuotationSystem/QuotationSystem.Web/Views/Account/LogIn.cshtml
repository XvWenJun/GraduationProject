@{

    ViewBag.Title = "用户登录";
}

@section styles{
    <style>
        body {
            background: #fff;
            color: #222;
            font-size: 9pt;
            font-family: 'Microsoft YaHei';
            background-color: #f8f8f8;
        }

        * {
            margin: 0;
            padding: 0;
        }

        .top_div {
            width: 100%;
            height: 60px;
            border-bottom: 1px solid #eaeaea;
            background: #2c3b41;
            padding-left: 60px;
            text-align: left;
            font-size: 25px;
            font-weight: 400;
            color: #fff;
        }

        #loginbody {
            background: #fff;
            border: 2px solid #e7e7e7;
            border-top: 2px solid #2c3b41;
            width: 300px;
            height: 300px;
            text-align: center;
            -moz-border-radius: 6px;
            -webkit-border-radius: 6px;
            border-radius: 6px;
            margin-top: 100px;
            padding: 0px 30px;
        }

        .heading {
            display: block;
            font-size: 20px;
            font-weight: 700;
            padding: 10px 0;
            border-bottom: 1px solid #f0f0f0;
            margin-bottom: 30px;
        }

        .icon {
            position: absolute;
            top: 9px;
            left: 5px;
            font-size: 17px;
            color: #2c3b41;
        }
    </style>
}

<div class="top_div">

    <table>
        <tr>
            <td style="width:100px;"></td>
            <td style="width:65px;">
                <div style="width:63px; overflow:hidden;"><img style="height:55px;width:55px;" src="/Content/Images/logo.png" /></div>
            </td>
            <td style="width:20px;"><div style="width:10px;border-right:1px solid #ccc;">&nbsp;</div></td>
            <td><div>百货公司报价管理系统</div></td>
        </tr>
    </table>
</div>

<table style="width:100%;min-height:600px">
    <tr>
        <td>&nbsp;</td>
        <td style="width:700px;">
            <br /><br />
            <div ><img src="~/Content/images/wordcloud.png" height="600" width="600" style="border:2px solid #e7e7e7;"/></div>
        </td>
        <td style="width:500px;">
            <div id="loginbody">
                <form class="form-horizontal" id="form">
                    <span class="heading">用户登录</span>

                    <div class="form-group" style="position:relative">
                        <input type="tel" class="form-control" style="padding-left:25px;" placeholder="账号" id="id" name="id" required maxlength="15">
                        <i class="icon fa fa-user"></i>
                    </div>

                    <div class="form-group" style="position:relative">
                        <input type="password" class="form-control" style="height:34px;padding:6px 12px; padding-left:25px;" placeholder="密码" id="password" name="password" required maxlength="20">
                        <i class="icon fa fa-lock"></i>
                    </div>

                    <div class="form-group" style="margin-top:-8px;">
                        <div class="checkbox" style="text-align:left; ">
                            <label><input type="checkbox" style="height:15px;width:15px;" name="remeber" id="remeber" /><span style="line-height:20px;font-size:12px;">记住我</span></label>
                        </div>
                    </div>
                    <br />
                    <div class="form-group" style="position:relative">
                        <button type="button" class="form-control btn btn-primary">
                            <span>登录</span>
                        </button>
                    </div>
                </form>
            </div>
        </td>
        <td>&nbsp;</td>
    </tr>
</table>

@section scripts{
    <script src="~/MyScripts/account.js"></script>
}